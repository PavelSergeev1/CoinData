<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_coin"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:layout_margin="0dp"
    android:background="@drawable/border">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvMarketNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/Black"
            android:textSize="10sp"
            />
    </RadioGroup>

    <RadioGroup
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:layout_gravity="start|center"
        android:layout_marginLeft="25dp"
        android:orientation="horizontal">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewList"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"/>

        </RadioGroup>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvCoin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="BTC"
                android:textAlignment="center"
                android:textColor="@color/Black"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvCoinName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="3dp"
                android:text="bitcoin"
                android:textAlignment="center"
                android:textSize="12sp"/>

        </RadioGroup>
    </RadioGroup>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:id="@+id/tvCoinPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tvCoinPrice"
            android:textColor="@color/Black"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start">

                <TextView
                    android:id="@+id/tvMarketCap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/MarketCap"
                    android:textColor="@color/Black"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tvVolume24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@string/Volume24"
                    android:textColor="@color/Black"
                    android:textSize="12sp"/>
            </RadioGroup>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="end">

                <TextView
                    android:id="@+id/tvMarketCapData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cap"
                    android:textColor="@color/Black"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tvVolume24Data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Vol"
                    android:textColor="@color/Black"
                    android:textSize="12sp"/>
            </RadioGroup>
        </RadioGroup>
    </RadioGroup>

    <RadioGroup
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:layout_gravity="end|center_horizontal"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvPercentOneHourData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+ 1.00%"
                android:textSize="13sp"
                />

            <TextView
                android:id="@+id/tvPercentTwentyFourHourData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="+ 1.00%"
                android:textSize="13sp"
                />

            <TextView
                android:id="@+id/tvPercentSevenDaysData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="+ 1.00%"
                android:textSize="13sp"
                />
        </RadioGroup>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvPercentOneHour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/PercentOneHour"
                android:textColor="@color/Gray3"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/tvPercentTwentyFourHour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/PercentTwentyFourHour"
                android:textColor="@color/Gray3"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/tvPercentSevenDays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/PercentSevenDays"
                android:textColor="@color/Gray3"
                android:textSize="13sp"/>
        </RadioGroup>
    </RadioGroup>
</FrameLayout>