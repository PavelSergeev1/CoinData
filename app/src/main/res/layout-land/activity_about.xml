<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorWhite"
              android:orientation="vertical"
              android:scrollbars="horizontal">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="About"
                android:textColor="@color/Black"
                android:textSize="28sp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/AboutApp"
                android:textColor="@color/Black"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Sourses"
                android:textColor="@color/Black"
                android:textSize="20sp"
                />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="15dp"
                android:orientation="horizontal">

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Coinlore"
                        android:textColor="@color/Black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="@string/Coingecko"
                        android:textColor="@color/Black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="@string/Cryptonator"
                        android:textColor="@color/Black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="@string/Cryptocompare"
                        android:textColor="@color/Black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="@string/HitBTC"
                        android:textColor="@color/Black"/>

                </RadioGroup>

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:autoLink="web"
                        android:text="@string/CoinloreLink"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:autoLink="web"
                        android:text="@string/CoingeckoLink"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:autoLink="web"
                        android:text="@string/CryptonatorLink"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:autoLink="web"
                        android:text="@string/CryptocompareLink"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:autoLink="web"
                        android:text="@string/HitBTCLink"/>
                </RadioGroup>
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/Donations"
                android:textColor="@color/Black"
                android:textSize="20sp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/DonationsDescription"
                android:textColor="@color/Black"
                android:textSize="14sp"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="8dp"
                android:background="#ffb056"
                android:orientation="vertical">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="30"
                        android:text="@string/BTC"
                        android:textColor="@android:color/background_light"
                        android:textSize="20sp"
                        />

                    <Button
                        android:id="@+id/BTC_COPY"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="70"
                        android:background="@color/Gray3"
                        android:onClick="onCopyAddress"
                        android:text="@string/Copy"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp"
                        />
                </RadioGroup>

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="40"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/BTC_Address"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        />
                </RadioGroup>
            </RadioGroup>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="8dp"
                android:background="#7373e5"
                android:orientation="vertical">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="30"
                        android:text="@string/ETH"
                        android:textColor="@android:color/background_light"
                        android:textSize="20sp"
                        />

                    <Button
                        android:id="@+id/ETH_COPY"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="70"
                        android:background="@color/Gray3"
                        android:onClick="onCopyAddress"
                        android:text="@string/Copy"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp"
                        />
                </RadioGroup>

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="40"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/ETH_Address"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        />
                </RadioGroup>
            </RadioGroup>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="8dp"
                android:background="#be3db796"
                android:orientation="vertical">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="30"
                        android:text="@string/USDT"
                        android:textColor="@android:color/background_light"
                        android:textSize="20sp"
                        />

                    <Button
                        android:id="@+id/USDT_COPY"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="70"
                        android:background="@color/Gray3"
                        android:onClick="onCopyAddress"
                        android:text="@string/Copy"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp"
                        />
                </RadioGroup>

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="40"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/USDT_Address"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        />
                </RadioGroup>
            </RadioGroup>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/darker_gray"
                android:orientation="vertical">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="30"
                        android:text="@string/LTC"
                        android:textColor="@android:color/background_light"
                        android:textSize="20sp"
                        />

                    <Button
                        android:id="@+id/LTC_COPY"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="70"
                        android:background="@color/Gray3"
                        android:onClick="onCopyAddress"
                        android:text="@string/Copy"
                        android:textColor="@color/colorWhite"
                        android:textSize="16sp"
                        />
                </RadioGroup>

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="40"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/LTC_Address"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        />
                </RadioGroup>
            </RadioGroup>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/holo_blue_light"
                android:orientation="vertical">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="30"
                        android:text="@string/DASH"
                        android:textColor="@android:color/background_light"
                        android:textSize="20sp"
                        />

                    <Button
                        android:id="@+id/DASH_COPY"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="70"
                        android:background="@color/Gray3"
                        android:onClick="onCopyAddress"
                        android:text="@string/Copy"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp"
                        />
                </RadioGroup>

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="40"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/DASH_Address"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        />
                </RadioGroup>
            </RadioGroup>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="8dp"
                android:background="#94d01d"
                android:orientation="vertical">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="30"
                        android:text="@string/NEO"
                        android:textColor="@android:color/background_light"
                        android:textSize="20sp"
                        />

                    <Button
                        android:id="@+id/NEO_COPY"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="70"
                        android:background="@color/Gray3"
                        android:onClick="onCopyAddress"
                        android:text="@string/Copy"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp"
                        />
                </RadioGroup>

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="40"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/NEO_Address"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        />
                </RadioGroup>
            </RadioGroup>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="8dp"
                android:background="#e5bb01"
                android:orientation="vertical">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="30"
                        android:text="@string/ZCASH"
                        android:textColor="@android:color/background_light"
                        android:textSize="20sp"
                        />

                    <Button
                        android:id="@+id/ZCASH_COPY"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="70"
                        android:background="@color/Gray3"
                        android:onClick="onCopyAddress"
                        android:text="@string/Copy"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp"
                        />
                </RadioGroup>

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="40"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="@string/ZCASH_Address"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        />
                </RadioGroup>
            </RadioGroup>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="30dp">
            </RadioGroup>
        </RadioGroup>
    </ScrollView>
</LinearLayout>