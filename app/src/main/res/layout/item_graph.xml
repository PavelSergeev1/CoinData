<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/graph_frame_layout"
    tools:context=".CoinInfoActivity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <com.jjoe64.graphview.GraphView
            android:id="@+id/graph"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_marginTop="@dimen/coin_info_item_margin"
            android:layout_marginBottom="@dimen/coin_info_item_margin"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <Button
                    android:id="@+id/btn1H"
                    android:layout_width="55dp"
                    android:layout_height="30dp"
                    android:background="@drawable/graph_button_background"
                    android:onClick="getGraph"
                    android:text="@string/H1"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp"/>
            </RadioGroup>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <Button
                    android:id="@+id/btn1D"
                    android:layout_width="55dp"
                    android:layout_height="30dp"
                    android:background="@drawable/graph_button_background"
                    android:onClick="getGraph"
                    android:text="@string/D1"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp"/>
            </RadioGroup>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <Button
                    android:id="@+id/btn3M"
                    android:layout_width="55dp"
                    android:layout_height="30dp"
                    android:background="@drawable/graph_button_background"
                    android:onClick="getGraph"
                    android:text="@string/M3"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp"/>
            </RadioGroup>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <Button
                    android:id="@+id/btn1Y"
                    android:layout_width="55dp"
                    android:layout_height="30dp"
                    android:background="@drawable/graph_button_background"
                    android:onClick="getGraph"
                    android:text="@string/Y1"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp"/>
            </RadioGroup>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <Button
                    android:id="@+id/btn6Y"
                    android:layout_width="55dp"
                    android:layout_height="30dp"
                    android:background="@drawable/graph_button_background"
                    android:onClick="getGraph"
                    android:text="@string/MAX"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp"/>
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>