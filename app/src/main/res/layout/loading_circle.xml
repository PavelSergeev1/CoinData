    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|center_vertical"
        app:srcCompat="@drawable/loading"/>
</LinearLayout>